{{!< center-container}}
<div class="row">
  <div class="col"></div>
  <div class="col-lg-6 col-md-8 col-sm-10">
    <h1 class="display-4">Create new Batch</h1>
    <p class="text-black-50">
      Create a tiny new links for your batches
    </p>
    <form class="form-group" action="/batches/" method="post">
      {{> error-snippet }}

      <div class="form-group">
        <label for="batchCode" class="ml-2">Batch Code</label>
        <input type="text" class="form-control" id="batchCode" name="code" required aria-required="true"
               aria-describedby="batchCodeHelp" placeholder="PANDW119">
        <small id="batchCodeHelp" class="form-text text-muted">Checkout Batch Code formats !</small>
      </div>
      <div class="form-group">
        <label for="batchName" class="ml-2">Batch Name</label>
        <input type="text" class="form-control" id="batchName" name="name" required aria-required="true"
               aria-describedby="batchNameHelp" placeholder="Python App Dev Noida">
      </div>
      <div class="form-group">
        <label for="whatsapp" class="ml-2">Whatsapp Link</label>
        <input type="text" class="form-control" id="whatsapp" name="whatsapp"
               placeholder="https://chat.whatsapp.com/somethingveryprivate">
      </div>
      <div class="form-group">
        <label for="github" class="ml-2">Github Link</label>
        <input type="text" class="form-control" id="github" name="github"
               placeholder="https://www.github.com/coding-blocks-archives/batch">
      </div>
      <div class="form-group">
        <label for="wakatime" class="ml-2">Wakatime Link</label>
        <input type="text" class="form-control" id="wakatime" name="wakatime"
               placeholder="https://www.wakatime.com/join/awesomeboard">
      </div>
      <div class="row px-2">
        <button class="btn btn-dark col-3" type="reset">Reset ⓧ </button>
        <div class="col"></div>
        <button class="btn btn-primary col-8" type="submit">Create →</button>
      </div>

    </form>
  </div>
  <div class="col"></div>
</div>